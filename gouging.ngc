;
; gouging programm
;
   o<version> call                        ; display set version
   o<machine> call                        ; get machine definitions
   o<reed> call                           ; reed parameters

   G17      ; xy plane
   G54      ; coord system 1
   G40      ; compensation off
   G49      ; tool length comp off
   G80      ; canning cycle off
   G90      ; absolute mode
   G21      ; metric
   G61      ; exact mode

   ; model definitions from reed
   ; #<_first-p>        ; start of profile table
   ; #<_last-p>         ; last entry profile table
   ; #<_m-x>            ; element half model width
   ; #<_m-s>            ; element size

   G53 G0 Z0                  ; safe hight
   ;
   ; parameters
   ;
   #<feed-rate> = 1000
   #<i-center-z> = [#<_i-radius> + #<_i-thickness>]
   #<safe-z> = 5

   M5                         ; stop spindle

   #<_req-tool> = 1        ; ball nose r = .5 mm
   o<change-tool> call     ; change tool and messure
   G10 L2 P1 X#<_ix-origin> Y#<_iy-origin> Z[#<_value>-#<_z-probe>+#<_iz-origin>-#<_i-sink-z>]

   F#<feed-rate>

   #<step-size> = [#<_big-gouge> / #<_gouge-steps>]

   S1000 M3                ; start spindle clock wise
   G4 P3                   ; wait 3 seconds for spindlespeed
   ;
   ; right hand circuit blade part
   ;
   #<delta-x> = #<_big-gouge>
   G0 X-#<delta-x> Y[#<_blade-block> + [#5410/2]]
   o100 while [#<delta-x> GT #<_small-gouge>]
      #<current-z> = [#<i-center-z> - sqrt[#<_i-radius>**2 - #<delta-x>**2]]
      ; line on left hand side
      G1 X-#<delta-x>
      G1 Z#<current-z>
      G1 X-#<delta-x> Y[#<_gouge-length> - #<_blade-block> - [#5410/2]] Z[#<current-z> + #<_i-delta-z>]
      ; line on right hand side
      G1 X#<delta-x>
      G1 Y[#<_blade-block> + [#5410/2]] Z#<current-z>
      #<delta-x> = [#<delta-x> - #<step-size>]
   o100 endwhile
   ;
   ; right hand circuit tube part
   ;
   G0 Z#<safe-z>
   G0 X-#<delta-x> Y[#5410/2]
   o200 while [#<delta-x> GE 0]
      #<current-z> = [#<i-center-z> - sqrt[#<_i-radius>**2 - #<delta-x>**2]]
      ; line on left hand side
      G1 X-#<delta-x>
      G1 Z#<current-z>
      G1 X[-#<delta-x>+#<_i-delta-x>] Y[#<_gouge-length> - [#5410/2]] Z[#<current-z> + #<_i-delta-z>]
      ; line on right hand side
      G1 X[#<delta-x> + #<_i-delta-x>]
      G1 X#<delta-x> Y[#5410/2] Z#<current-z>
      #<delta-x> = [#<delta-x> - #<step-size>]
   o200 endwhile

   M5                         ; stop spindle
   G53 G0 Z0                  ; safe hight

   G54      ; coord system 1
   G90      ; absolute  distance
   G80      ; canning cycle off
   G40      ; compensation off
   G64      ; cancel exact mode
   M2       ; end of programm


